menu "ethernet config"

    config HOST_IP_ADDR
        string "Host IP address"
        default "192.168.0.165"

    config HOST_PORT
        int "Host port"
        range 1024 65535
        default 8080

    config ETH_MDC_GPIO
        int "ETH MDC GPIO"
        default 23

    config ETH_MDIO_GPIO
        int "ETH MDIO GPIO"
        default 18

    config ETH_PHY_RST_GPIO
        int "ETH PHY reset GPIO"
        default 5

    config ETH_PHY_ADDR
        int "ETH PHY address"
        default 1

    config CONNECTED_BIT
        int "Connected bit"
        default 1

    config ETH_CONNECTION_TMO_MS
        int "Ethernet connection timeout (ms)"
        default 10000
        
    config ETH_BUFFER_SIZE
        int "Ethernet buffer size"
        default 128
        
    config KEEPALIVE_ENABLED
        bool "Enable TCP keep-alive"
        default y

    config KEEPALIVE_IDLE
        int "TCP keep-alive idle time (s)"
        default 5

    config KEEPALIVE_INTERVAL
        int "TCP keep-alive interval time (s)"
        default 5

    config KEEPALIVE_COUNT
        int "TCP keep-alive packet retry count"
        default 3

    config USE_STATIC_IP
        bool "Use static IP"
        default y
    
    config ETH_PHY_SI_PIN
        int "ETH PHY SI GPIO pin number"
        default 13
    
    config ETH_PHY_SO_PIN
        int "ETH PHY SO GPIO pin number"
        default 12
    
    config ETH_PHY_SCK_PIN
        int "ETH PHY SCK GPIO pin number"
        default 14
    
    config ETH_PHY_CS_PIN
        int "ETH PHY CS GPIO pin number"
        default 15

    
endmenu

menu "Storage Configuration"
    config SD_CS_PIN
        int "SD Card CS GPIO pin number"
        default 5
        help
            GPIO pin number used for SD card chip select (CS).
            
    config SD_MOSI_PIN
        int "SD Card MOSI GPIO pin number"
        default 23
        help
            GPIO pin number used for SD card MOSI (Master Out Slave In).
            
    config SD_MISO_PIN
        int "SD Card MISO GPIO pin number"
        default 19
        help
            GPIO pin number used for SD card MISO (Master In Slave Out).
            
    config SD_SCK_PIN
        int "SD Card SCK GPIO pin number"
        default 18
        help
            GPIO pin number used for SD card SCK (Serial Clock).
            
    config SD_CARD_DETECT_PIN
        int "SD Card detect GPIO pin number (optional)"
        default -1
        help
            GPIO pin number used for SD card detect signal. Set to -1 if not used.
            
    config ENABLE_SD_STORAGE
        bool "Enable packet storage on SD card"
        default y
        help
            Enable storing packets to SD card for backup.
endmenu