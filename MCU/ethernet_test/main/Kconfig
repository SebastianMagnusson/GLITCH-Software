menu "uart config"

config UART_BAUD_RATE
    int "UART baud rate"
    default 115200

config UART_NUM
    int "UART number"
    range 0 2
    default 1
    help
        UART port number: 0 for UART_NUM_0, 1 for UART_NUM_1, 2 for UART_NUM_2

config TX_PIN
    int "TX pin"
    default 9

config RX_PIN
    int "RX pin"
    default 10

config UART_BUF_SIZE
    int "UART buffer size"
    default 1500

endmenu
